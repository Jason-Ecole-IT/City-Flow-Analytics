# ---------- Build stage ----------
FROM node:20-alpine AS builder

WORKDIR /app

# Copier package.json et package-lock.json pour installer les dépendances
COPY package*.json ./

RUN npm install

# Copier le reste du code
COPY . .

# Builder l'application (optionnel si tu as un build step, sinon peut être ignoré)
# RUN npm run build

# ---------- Runtime stage ----------
FROM node:20-alpine

WORKDIR /app

# Copier node_modules et code depuis le build stage
COPY --from=builder /app .

EXPOSE 4000

# Commande pour lancer le serveur de dev
CMD ["npm", "run", "dev"]
